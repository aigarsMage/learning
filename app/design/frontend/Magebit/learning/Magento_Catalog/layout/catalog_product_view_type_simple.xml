<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-product-simple"/>
        <attribute name="id" value="page-product-simple"/>
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.stock.sku" destination="product.info.price" after="product.price.final"/>
        <move element="product.info.review" destination="product.info.main" before="product.info.price"/>
        <move element="product.info.upsell" destination="product.info.main" after="product.info.form.content"/>
        <move element="catalog.product.related" destination="product.info.media" after="product.info.main" />
        <!--<referenceBlock name="product.info.stock.sku">-->
            <!--<referenceBlock name="product.info.sku" remove="true" />-->
        <!--</referenceBlock>-->


        <!--<referenceContainer name="product.info.main">-->
            <!--<block class="Magento\Catalog\Block\Product\View" name="product.attribute.custom" template="Magento_Catalog::product/list/attribute_description.phtml">-->
                <!--<arguments>-->
                    <!--<argument name="title" translate="true" xsi:type="string">Your Custom Attribute Title</argument>-->
                <!--</arguments>-->
            <!--</block>-->
        <!--</referenceContainer>-->

        <referenceContainer name="product.info.main">
            <container name="product.attribute.description" label="Product auxiliary info" htmlTag="div" htmlClass="product-attribute-description" after="product.info.price">
                <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.attribute.custom" template="Magento_Catalog::product/list/attribute_description.phtml" >
                    <arguments>
                        <argument name="at_call" xsi:type="string">getShortDescription</argument>
                        <argument name="at_code" xsi:type="string">short_description</argument>
                        <!--<argument name="css_class" xsi:type="string">product-attribute-description</argument>-->
                        <argument name="at_label" xsi:type="string">none</argument>
                        <argument name="title" translate="true" xsi:type="string">Overview</argument>
                        <argument name="add_attribute" xsi:type="string">itemprop="description"</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <referenceBlock name="product.info.social" remove="true"/>
        <!--<referenceBlock name="reviews.tab" remove="true" />-->
        <referenceBlock name="product.info.details" remove="true" />
        <!--<referenceBlock name="product.attributes" remove="true" />-->
        <!--/var/www/learning/public/app/code/Magento/Catalog/view/frontend/layout/catalog_product_view.xml-->
    </body>
</page>
